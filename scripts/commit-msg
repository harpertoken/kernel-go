#!/bin/bash

# Conventional commit message hook
# Enforces: lowercase, ≤60 chars, starts with type like feat:, fix:, etc.

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(head -n1 "$COMMIT_MSG_FILE")

# Check if first line is lowercase
if [[ "$COMMIT_MSG" != "$(echo "$COMMIT_MSG" | tr '[:upper:]' '[:lower:]')" ]]; then
    echo "Error: Commit message must be lowercase"
    exit 1
fi

# Check length <=60
if [[ ${#COMMIT_MSG} -gt 60 ]]; then
    echo "Error: Commit message first line must be ≤60 characters"
    exit 1
fi

# Check starts with conventional type
if ! echo "$COMMIT_MSG" | grep -qE '^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: '; then
    echo "Error: Commit message must start with conventional type (feat:, fix:, docs:, style:, refactor:, test:, chore:, perf:, ci:, build:, revert:)"
    exit 1
fi

exit 0